{
  "compilerOptions": {
    "outDir": "../dist/server",
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "rootDir": "src"
  }
}