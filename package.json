{
  "name": "jssauna",
  "version": "0.2.0",
  "description": "A Web Based Sauna Control System written in JavaScript",
  "main": "src/index.js",
  "author": "ardean",
  "repository": "https://github.com/ardean/jsSauna",
  "bugs": "https://github.com/ardean/jsSauna/issues",
  "license": "MIT",
  "keywords": [
    "sauna",
    "jsSauna",
    "raspberry",
    "pi",
    "raspberry-pi",
    "control",
    "sauna-control",
    "webinterface",
    "web-interface",
    "web"
  ],
  "scripts": {
    "start": "concurrently -r \"yarn start-server\" \"yarn start-app\"",
    "start-server": "yarn build-server && NODE_ENV=development node dist/server/CLI --username admin --pw 1234",
    "start-app": "cd app && yarn start",
    "build": "yarn build-server && yarn build-app",
    "build-server": "rm -rf dist/server && tsc -p ./server",
    "build-app": "cd app && yarn build && rm -rf ../dist/app && cp -rf build ../dist/app"
  },
  "bin": {
    "jssauna": "./bin/index.js"
  },
  "dependencies": {
    "commander": "^2.19.0",
    "express": "^4.16.4",
    "socket.io": "^2.1.1"
  },
  "optionalDependencies": {
    "rpi-dht-sensor": "^0.1.1",
    "onoff": "^3.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.0",
    "@types/onoff": "^3.2.0",
    "@types/socket.io": "^1.4.38",
    "concurrently": "^4.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  }
}